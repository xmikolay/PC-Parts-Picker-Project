<Window x:Class="OODProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OODProject"
        mc:Ignorable="d"
        Title="System Configurator" Height="450" Width="800" WindowStartupLocation="CenterScreen" MinHeight="350" MinWidth="700" Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        
        <Label Content="CPU" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tblkCPU" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Padding="5" Background="LightGray"/>
        <TextBlock x:Name="tblkCPUPrice" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center"/>
        <Button x:Name="btnCPU" Grid.Row="0" Grid.Column="3" Content="Browse" Click="btnCPU_Click" Tag="CPU"/>

        <Label Content="Motherboard" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tblkMB" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Padding="5" Background="LightGray"/>
        <TextBlock x:Name="tblkMBPrice" Grid.Row="2" Grid.Column="2" Text="€" HorizontalAlignment="Center"/>
        <Button x:Name="btnMotherboard" Grid.Row="2" Grid.Column="3" Content="Browse" Click="btnMotherboard_Click"/>

        <Label Content="RAM" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tblkRAM" Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Padding="5" Background="LightGray"/>
        <TextBlock x:Name="tblkRAMPrice" Grid.Row="3" Grid.Column="2" Text="€" HorizontalAlignment="Center"/>
        <Button x:Name="btnRAM" Grid.Row="3" Grid.Column="3" Content="Browse" Click="btnRAM_Click"/>

        <Label Content="GPU" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tblkGPU" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Padding="5" Background="LightGray"/>
        <TextBlock x:Name="tblkGPUPrice" Grid.Row="4" Grid.Column="2" Text="€" HorizontalAlignment="Center"/>
        <Button x:Name="btnGPU" Grid.Row="4" Grid.Column="3" Content="Browse" Click="btnGPU_Click"/>

        <Label Content="Power Supply" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tblkPSU" Grid.Row="5" Grid.Column="1" TextWrapping="Wrap" Padding="5" Background="LightGray"/>
        <TextBlock x:Name="tblkPSUPrice" Grid.Row="5" Grid.Column="2" Text="€" HorizontalAlignment="Center"/>
        <Button x:Name="btnPSU" Grid.Row="5" Grid.Column="3" Content="Browse" Click="btnPSU_Click"/>

        <Label Content="Case" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tblkCase" Grid.Row="6" Grid.Column="1" TextWrapping="Wrap" Padding="5" Background="LightGray"/>
        <TextBlock x:Name="tblkCasePrice" Grid.Row="6" Grid.Column="2" Text="€" HorizontalAlignment="Center"/>
        <Button x:Name="btnCase" Grid.Row="6" Grid.Column="3" Content="Browse" Click="btnCase_Click"/>

        <Label Content="Storage 1" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tblkStorage1" Grid.Row="7" Grid.Column="1" TextWrapping="Wrap" Padding="5" Background="LightGray"/>
        <TextBlock x:Name="tblkStorage1Price" Grid.Row="7" Grid.Column="2" Text="€" HorizontalAlignment="Center"/>
        <Button x:Name="btnStorage1" Grid.Row="7" Grid.Column="3" Content="Browse" Click="btnStorage1_Click"/>

        <Label Content="Storage 2*" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tblkStorage2" Grid.Row="8" Grid.Column="1" TextWrapping="Wrap" Padding="5" Background="LightGray"/>
        <TextBlock x:Name="tblkStorage2Price" Grid.Row="8" Grid.Column="2" Text="€" HorizontalAlignment="Center"/>
        <Button x:Name="btnStorage2" Grid.Row="8" Grid.Column="3" Content="Browse" Click="btnStorage2_Click"/>

        <Label Content="CPU Cooler*" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBlock x:Name="tblkCooler" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Padding="5" Background="LightGray"/>
        <TextBlock x:Name="tblkCoolerPrice" Grid.Row="1" Grid.Column="2" Text="€" HorizontalAlignment="Center"/>
        <Button x:Name="btnCooler" Grid.Row="1" Grid.Column="3" Content="Browse" Click="btnCooler_Click"/>
        <TextBlock x:Name="tblkTotalPrice" Grid.Row="9" Grid.Column="2" Text="Total: €" Margin="5" HorizontalAlignment="Center"/>
        <Button x:Name="btnCompatibility" Grid.Column="1" Content="Check Compatibility" HorizontalAlignment="Center" Margin="0,15,0,0" Grid.Row="9" VerticalAlignment="Top" Width="150" Click="btnCompatibility_Click"/>
    </Grid>
</Window>
